#include "holberton.h"

/**
 * is_prime_number - returns 1 if input integer is prime, otherwise returns 0
 * @n: number to be examined
 * Return: int
 */
int is-divisible(int n);
int is_prime_number(int n)
{
	if (n <= 1)
	{
		return (0);
	}
	else if (n <= 3)
	{
		return (1);
	}
	else if (n % 2 == 0 || n % 3 == 0)
	{
		return (0);
	}
	else if (n % 5 == 0 || n % 7 == 0)
		return (0);
	return (is-divisible(n, 11));
}

